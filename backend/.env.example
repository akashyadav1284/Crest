# Port for the Node.js Express server to run on
PORT=5000
NODE_ENV=development

# MongoDB Atlas Connection String (Replace <db_password> and <db_name>)
# Never commit your actual password or connection string to version control
MONGO_URI=mongodb+srv://<db_username>:<db_password>@cluster0.xxxxx.mongodb.net/<db_name>?retryWrites=true&w=majority&appName=Cluster0

# Authentication JWT Secret Key (Use a strong, long random string in production)
JWT_SECRET=super-secret-crest-jwt-key

# Google OAuth Client ID for external logins
GOOGLE_CLIENT_ID=your_google_oauth_client_id_here.apps.googleusercontent.com

# Frontend URL (Used for CORS origin configuration in production)
FRONTEND_URL=https://your-production-domain.com
